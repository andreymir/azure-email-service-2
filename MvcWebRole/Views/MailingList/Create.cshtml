@model DataAccess.MailingList

@{
    ViewBag.Title = "Create mailing list";
}

<h1>New mailing list</h1>

<div class="row">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset class="col-md-6">
            <legend></legend>
            <div class="form-group">
                @Html.LabelFor(model => model.ListName)
                @Html.EditorFor(model => model.ListName)
                @Html.ValidationMessageFor(model => model.ListName)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FromEmailAddress)
                @Html.EditorFor(model => model.FromEmailAddress)
                @Html.ValidationMessageFor(model => model.FromEmailAddress)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <p>
                <button type="submit" class="btn btn-primary">Create</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class="btn btn-link" })
            </p>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
