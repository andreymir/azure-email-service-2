@model MailingList

@{
    ViewBag.Title = "Delete mailing list";
}

<h1>Delete "@Model.ListName"</h1>

<div class="row">
    <h2>Are you sure you want to delete this?</h2>
    <fieldset>
        <legend></legend>

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.ListName)
            </label>
            <p class="form-control-static">
                @Html.DisplayFor(model => model.ListName)
            </p>
        </div>

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.FromEmailAddress)
            </label>
            <p class="form-control-static">
                @Html.DisplayFor(model => model.FromEmailAddress)
            </p>
        </div>

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.Description)
            </label>
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Description)
            </p>
        </div>
    </fieldset>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <button type="submit" class="btn btn-primary">Delete</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-link" })
        </p>
    }
</div>
