@model DataAccess.MailingList

@{
    ViewBag.Title = "Mailing list details";
}

<h1>@Model.ListName details</h1>

<div class="row">
    <fieldset>
        <legend></legend>

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.ListName)
            </label>
            <p class="form-control-static">
                @Html.DisplayFor(model => model.ListName)
            </p>
        </div>

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.FromEmailAddress)
            </label>
            <p class="form-control-static">
                @Html.DisplayFor(model => model.FromEmailAddress)
            </p>
        </div>

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.Description)
            </label>
            <p class="form-control-static">
                @Html.DisplayFor(model => model.Description)
            </p>
        </div>
        <div class="form-group">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ListName }, new { @class="btn btn-primary" })
            @Html.ActionLink("Cancel", "Index", null, new { @class="btn btn-link" })
        </div>
    </fieldset>

</div>
